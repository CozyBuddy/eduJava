package days05.board.service;

import java.sql.SQLException;
import java.util.ArrayList;

import days05.board.domain.BoardDTO;
import days05.board.persistence.BoardDAO;

public class BoardService {
	private BoardDAO dao = null ; 
	
	public BoardService(BoardDAO dao) {
		this.dao = dao;
	}
	public void setDao(BoardDAO dao) {
		this.dao = dao;
	}
	
	// 1. 게시글 목록 조회 서비스
	public ArrayList<BoardDTO> Sselect(){
		ArrayList<BoardDTO> al = null ;
		//1.DB 처리 
		try {
			al =this.dao.Sboard();
		} catch (SQLException e) {
			System.out.println("BoardDAO.Sselect 에서 예외 발생");
			e.printStackTrace();
		}
		//2.로그 기록
		System.out.println("> 게시글 목록 조회 : 로그 기록 작업");
		
		
		return al;
	};
	// 2. 게시글 쓰기
	public int Iselect(BoardDTO dto){
		int rowcount = 0;
	
		//1.DB 처리 
		try {
			al =this.dao.Iboard(dto);
		} catch (SQLException e) {
			System.out.println("BoardDAO.Sselect 에서 예외 발생");
			e.printStackTrace();
		}
		//2.로그 기록
		System.out.println("> 게시글 목록 조회 : 로그 기록 작업");
		
		
		return al;
	};

}
